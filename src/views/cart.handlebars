<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito</title>
</head>

<body>
    <h1>Carrito</h1>
    {{#each cart.products}}
    <div>
        <h2>{{this.product.title}}</h2>
        <p>Descripci√≥n: {{this.product.description}}</p>
        <p>Precio unitario: {{this.product.price}}</p>
        <p>Cantidad: {{this.quantity}}</p>
        <p>Subtotal: {{this.quantity * this.product.price}}</p>
        {{#if this.product.thumbnails.length}}
        <ul>
            {{#each this.product.thumbnails}}
            <li><img src="{{this}}" alt="Thumbnail"></li>
            {{/each}}
        </ul>
        {{/if}}
    </div>
    {{/each}}
</body>

</html>